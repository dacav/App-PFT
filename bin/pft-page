=head1 NAME

pft page - Edit a page

=head1 SYNOPSYS

pft page [options] Title

=head1 DESCRIPTION

Edit a page.

=head1 OPTIONS

=over

=item --author=<name> | -a <name>

=item --tag=<tag> | -t <tag>

=item --help | -h

=back


=cut

use strict;
use warnings;

use feature qw/say/;
use Pod::Usage;
use Pod::Find qw/pod_where/;

use App::PFT;
use App::PFT::Struct::Tree;
use App::PFT::Data::Date;
use App::PFT::Struct::Conf qw/
    cfg_load
    $ROOT
    $AUTHOR
/;

use Getopt::Long qw/GetOptionsFromArray/;
Getopt::Long::Configure qw/bundling/;

cfg_load App::PFT::findroot -die => 1;

my %opts = (
    author => $AUTHOR,
    tags => [],
);
my %datespec;
GetOptions(
    'author|a=s'    => \$opts{author},
    'tag|t=s@'      => \$opts{tags},
    'help|h!'       => sub {
        pod2usage
            -exitval => 1,
            -verbose => 2,
            -input => pod_where({-inc => 1}, __PACKAGE__)
        ;
    },
);

unless (@ARGV) {
    say STDERR "Usage: $App::PFT::Name [options] <title>";
    exit 1;
}

my $tree = App::PFT::Struct::Tree->new(basepath => $ROOT);
my $page = $tree->page(
    title => join(' ', @ARGV),
    %opts
);

$page->open('a');
$page->edit;
