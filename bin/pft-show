=head1 NAME

pft show - Show the built site

=head1 SYNOPSYS

pft clean [-v]

=head1 DESCRIPTION

Show the built site

=head1 OPTIONS

=over

=item --verbose | -v

=item --help | -h

=back

=cut

use strict;
use warnings;

use feature qw/say/;

use Pod::Usage;
use File::Spec;

use Getopt::Long;
Getopt::Long::Configure ("bundling");

use PFT::Tree;

my $browser = $ENV{BROWSER};
my $verbose = 0;
GetOptions(
    'browser=s' => \$browser,
    'help|h' => sub {
        pod2usage
            -exitval => 1,
            -verbose => 2,
            -input => App::PFT::help_of 'show',
    }
) or exit 1;

my $index = File::Spec->catfile(PFT::Tree->new->dir_build, 'index.html');

unless ($index) {
    say STDERR 'Need to build first, use pft make';
    exit 1;
}

system($browser, $index);
