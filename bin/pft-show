=head1 NAME

pft show - Show the built site

=head1 SYNOPSYS

pft clean [-v]

=head1 DESCRIPTION

Show the built site

=head1 OPTIONS

=over

=item --verbose | -v

=item --help | -h

=back

=cut

use strict;
use warnings;

use feature qw/say/;

use Pod::Usage;
use File::Spec::Functions qw/catfile/;

use Getopt::Long;
Getopt::Long::Configure ("bundling");

use App::PFT;
use App::PFT::Struct::Conf qw/cfg_load $ROOT %SYSTEM/;
use App::PFT::Struct::Tree;

my $verbose = 0;
my $browser;
GetOptions(
    'browser|b=s' => \$browser,
    'help|h' => sub {
        pod2usage
            -exitval => 1,
            -verbose => 2,
            -input => App::PFT::help_of 'show',
    }
) or exit 1;

cfg_load App::PFT::findroot -die => 1;

$browser = $SYSTEM{Browser} || $ENV{BROWSER} unless $browser;
unless($browser) {
    say STDERR
        'Use --browser, define env $BROWSER or define one in the config file';
    exit 1;
}

my $tree = App::PFT::Struct::Tree->new(basepath => $ROOT);
my $index = catfile $tree->dir_build, 'index.html';

unless ($index) {
    say STDERR 'Need to build first, use pft make';
    exit 1;
}

system($browser, $index);
